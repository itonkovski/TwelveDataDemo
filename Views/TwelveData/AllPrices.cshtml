@model IEnumerable<TwelveDataPriceViewModel>
@{
    ViewData["Title"] = "All Prices";
}
<h3 class="text-center">All Prices</h3>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Symbol</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var price in Model)
            {
                <tr>
                    <td>@price.Id</td>
                    <td>@price.Symbol</td>
                    <td>@price.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No samples available yet !</h3>
}
